produtos = {}

while True:
    cod = int(input('Código :'))
    nme = input('nome :')
    prco = float(input('digite o preço do prod. :'))
    qtde = int(input('digite quantos deste item são :'))
    
    prd = []
    prd.append(nme)    
    prd.append(prco)
    prd.append(qtde)
    produtos.update({cod : prd})
    
    resp = input('deseja continuar ?(sim : s) (nao : n) : ')
    
    if resp == ('n'):
        break
