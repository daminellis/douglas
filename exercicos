numeros = list()
pares = list()


quantidade = int(input('Digite quantos números quer textar: '))

for i in range(0,quantidade):
    numeros.append(int(input('Digite o número')))
for i in range(0,quantidade):
    if numeros[i]%2 == 0:
        pares.append(numeros[i])
        
print('Tamanho da lista L:',quantidade)
print('L:',numeros)
print('Resposta:',pares)

