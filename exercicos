teste 5 

notas = list()
soma = media = 0 

for i in range (0,3):
    al1 = float(input('digite a nota de cada aluno :'))
    notas.append(al1)
    soma = soma + notas[i]
    
media = soma/3
notas.sort(reverse=False)
menor = min(notas)
maior = max(notas)
print ('menor nota :',menor)
print ('maior nota :',maior)
print ('media %0.2f'%media)
print (notas)
