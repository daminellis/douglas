exer 3

i = 0 
soma = 0 
pos = 0
neg = 0

while i > 4 :
    n = float(input('Digite um numero :'))
    if n < 0 :
        neg = neg + 1
    elif n > 0 :
        pos = pos + 1
    i = i +1
    soma = soma + n
print ('media',soma/i, '\n numeros positivos :',pos, '\n numeros negativos :',neg)

